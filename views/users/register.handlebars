<div class="row">
  <div class="col-md-6 mx-auto">
  	<div class="card card-body">
  		<img class="logo" src="/img/logo.png">
       <h3 class="text-center">Account Register</h3>
       <form accept="/users/register" method="post">
          <div class="form-group">
            <label>Name</label>
            <input type="text" value="{{name}}" name="name" class="form-control" required="">
          </div>

          <div class="form-group">
          	<label>Email</label>
          	<input type="email" name="email" value="{{email}}" class="form-control" required="">
          </div>

          <div class="form-group">
          	<label>Password</label>
          	<input type="password" name="password" value="{{password}}" class="form-control" required="">
          </div>

          <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" name="password2" value="{{password2}}" class="form-control" required="">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
       </form>
  	</div>
  </div>
</div>
